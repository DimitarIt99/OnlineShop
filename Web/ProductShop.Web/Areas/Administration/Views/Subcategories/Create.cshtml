@model ProductShop.Web.ViewModels.Subcategories.CreateSubcategoryViewModel

<form method="post">
    <h4>Create a new subcategory.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <texta class="form-group">
        <div><label asp-for="@Model.Description"></label></div>
        <textarea asp-for="@Model.Description" rows="10" cols="50"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </texta>
    <button type="submit" class="btn btn-primary">Create</button>
</form>