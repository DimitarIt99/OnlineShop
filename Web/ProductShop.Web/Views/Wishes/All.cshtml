@model ProductShop.Web.ViewModels.Wishes.UserWishesViewModel


@if (this.Model.Wishes.Count() != 0)
{

    <partial name="_ProductListingPartial" model="@Model.Wishes" />

    <nav aria-label="...">
        <ul class="pagination justify-content-center">
            @if (this.Model.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="Wishes"
                       asp-action="All"
                       asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                var active = i == this.Model.CurrentPage ? "active" : string.Empty;

                <li class="page-item @active">
                    <a class="page-link"
                       asp-controller="Wishes"
                       asp-action="All"
                       asp-route-page="@i">@i</a>
                </li>
            }
            @if (this.Model.CurrentPage == this.Model.PagesCount)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Next</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="Wishes"
                       asp-action="All"
                       asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <div class="card mb-3">
        <img src="https://stackify.com/wp-content/uploads/2018/09/Learn-Go_-Tutorials-for-Beginners-Intermediate-and-Advanced-programmers-881x441.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">You have not products added to your wish list!</h5>
            <p class="card-text">When you add a product it will apear here.</p>
            <a asp-area="" asp-controller="Categories" asp-action="All" class="btn btn-primary">Categories</a>
        </div>
    </div>
}
